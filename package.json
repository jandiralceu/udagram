{
  "name": "udagram-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "docker:build:frontend": "docker build -f apps/udagram-frontend/Dockerfile -t jandir/udagram-frontend .",
    "docker:build:api-user": "docker build -f apps/udagram-api-user/Dockerfile -t jandir/udagram-api-user .",
    "docker:build:api-feed": "docker build -f apps/udagram-api-feed/Dockerfile -t jandir/udagram-api-feed .",
    "db:generate:user": "npm run db:generate --workspace=apps/udagram-api-user --",
    "db:migrate:user": "npm run db:migrate -w apps/udagram-api-user",
    "db:generate:feed": "npm run db:generate --workspace=apps/udagram-api-feed --",
    "db:migrate:feed": "npm run db:migrate -w apps/udagram-api-feed",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "turbo": "latest",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "apps/udagram-api-user/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config apps/udagram-api-user/eslint.config.js",
      "prettier --write"
    ],
    "apps/udagram-api-feed/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config apps/udagram-api-feed/eslint.config.js",
      "prettier --write"
    ],
    "packages/pubsub/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config packages/pubsub/eslint.config.js",
      "prettier --write"
    ],
    "packages/aws-uploader/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config packages/aws-uploader/eslint.config.js",
      "prettier --write"
    ],
    "packages/fastify-dynamo-plugin/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --config packages/fastify-dynamo-plugin/eslint.config.js",
      "prettier --write"
    ],
    "**/*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "@connectrpc/connect": "^2.1.1"
  }
}
